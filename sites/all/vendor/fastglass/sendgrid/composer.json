{
  "name": "fastglass/sendgrid",
  "description": "This library allows you to send emails through SendGrid using PHP and Guzzle 6.x.",
  "version": "1.0.8",
  "homepage": "https://github.com/taz77/sendgrid-php-ng",
  "license": "MIT",
  "keywords": [
    "SendGrid",
    "sendgrid",
    "email",
    "send",
    "grid"
  ],
  "authors": [
    {
      "name": "Brady Owens",
      "email": "brady@fastglass.net",
      "homepage": "https://github.com/taz77"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "sendgrid/smtpapi": "~0.5",
    "guzzlehttp/guzzle": ">=6.2.1"
  },
  "require-dev": {
    "mockery/mockery": "~0.9",
    "phpunit/phpunit": "~4.4",
    "vlucas/phpdotenv": "~1.0"
  },
  "type": "library",
  "autoload": {
    "psr-4": {
      "Fastglass\\SendGrid\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Fastglass\\SendGrid\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-ci": "vendor/bin/phpunit --coverage-text"
  }
}
